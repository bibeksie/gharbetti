@{
    ViewData["Title"] = "Index";
}

<script src="~/js/Angularjs/angular.min.js"></script>
<script src="~/js/Floor/Index.js"></script>

<div ng-app="floorIndex" ng-controller="formController as ctrl"
     ng-init="init(
    @Newtonsoft.Json.JsonConvert.SerializeObject(ViewData["Floor"])
     )" ng-cloak>
    <div asp-validation-summary="None"></div>
    <div class="box">
        <div class="box-header with-border">

            <button type="button" class="btn btn-primary" ng-click="onClickAddModal()">Add</button>

            <table class="table table-fixed table-striped table-bordered" id="floorTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in FloorList">
                        <td>{{ data.Name }}</td>
                        <td>
                            <button type="button" class="btn btn-primary" ng-click="ShowEdit(data.Id)">Edit</button>
                            <button type="button" class="btn btn-danger" ng-click="Delete(data.Id)">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Floor</h5>
                    </div>
                    <div class="modal-body">
                        <div>
                            <label class="col-form-label">Name :</label>
                            <input class="form-control" ng-model="Floor.Name" placeholder="Name" autocomplete="off" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" ng-click="onClickAdd()">Save</button>
                        <button type="button" class="btn btn-secondary" ng-click="onClickCloseModal()">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

